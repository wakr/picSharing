<p id="notice"><%= notice %></p>

<h1>Listing Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Uploaded</th>
      <th>Url</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.uploaded %></td>
        <td><%= picture.url %></td>
        <td><%= picture.score %></td>
        <td><%= link_to 'Show', "/pictures/#{picture.url}" %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', "/pictures/#{picture.url}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag({:action => 'create', :controller => 'pictures'}, :multipart => true) do %>
    <p>
      <label for="upload_file">Select your image</label>
      <%= file_field 'upload', 'datafile'%>
    </p>
    <%= submit_tag 'Upload' %>
    <% end %>

<br>

