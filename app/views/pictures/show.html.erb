
<div class="container">

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">



    </div>
    <div class="col-sm-4"></div>
  </div>

  <div class="row">
    <p>
      <img src="data:image/png;base64,<%= @picture.data %>" class="img-responsive"/>
    </p>
  </div>
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">

      <%= bootstrap_form_for(Comment.new) do |f| %>
          <%= f.text_area :text %>
          <%= f.hidden_field :picture_id, :value => @picture.id %>
          <%= f.submit 'Comment' %>
      <% end %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <div class="row"><br></div>
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <% @picture.comments.each do |comment| %>
          <div class="panel panel-default">
            <div class="panel-body">
              <b><%= comment.text %></b>
              <br>
              <%= comment.created_at %>
            </div>
          </div>
      <% end %>

    </div>
    <div class="col-sm-4"></div>
  </div>
</div>