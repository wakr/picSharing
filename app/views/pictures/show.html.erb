<div class="container">

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">


    </div>
    <div class="col-sm-4"></div>
  </div>

  <div class="row">
    <p>
      <%= image_tag @picture.image.url %>
    </p>
  </div>
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <div class="well">
          <dl>
            <dt>Name:</dt>
            <dd><%= @picture.image_file_name %></dd>
            <br>
            <dt>Type:</dt>
            <dd><%= @picture.image_content_type %></dd>
            <br>
            <dt>Size:</dt>
            <dd><%= @picture.image_file_size %> bytes</dd>
          </dl>
      </div>
      <% @picture.comments.each do |comment| %>
          <div class="panel panel-default">
            <div class="panel-body">
              <b><%= comment.text %></b>
              <br>
              <%= comment.created_at.strftime("%d.%m.%y - %H:%M") %>
            </div>
          </div>
      <% end %>
      <%= bootstrap_form_for(Comment.new) do |f| %>
          <%= f.text_area :text %>
          <%= f.hidden_field :picture_id, :value => @picture.id %>
          <%= f.submit 'Comment' %>
      <% end %>
    </div>
    <div class="col-sm-2"></div>
  </div>
  <div class="row"><br></div>
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>